<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_student_suggestion_form" model="ir.ui.view">
        <field name="name">student.suggestion.form</field>
        <field name="model">school.student.suggestion</field>
        <field name="arch" type="xml">
            <form string="Details">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="suggestion"/>
                        <field name="standard"/>

                    </group>
                    <footer>
                        <button name="action_create_suggestion" type="object" string="REGISTER" class="btn_primary"/>
                        <button string="CANCEL" class="btn_secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>